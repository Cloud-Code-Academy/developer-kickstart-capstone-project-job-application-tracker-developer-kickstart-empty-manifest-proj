<?xml version="1.0" encoding="UTF-8"?>
<Package xmlns="http://soap.sforce.com/2006/04/metadata">
  <!-- Retrieve all custom objects -->
  <types>
    <members>*</members>
    <name>CustomObject</name>
  </types>

  <!-- Retrieve specific standard objects (Account, Contact, Opportunity) -->
  <types>
    <members>Account</members>
    <members>Contact</members>
    <members>Opportunity</members>
    <members>Event</members>
    <name>CustomObject</name>
  </types>

  <!-- Retrieve all custom fields -->
  <types>
    <members>Account.*</members>
    <members>Contact.*</members>
    <members>Opportunity.*</members>
    <members>Event.*</members>
    <members>*__c</members>
    <name>CustomField</name>
  </types>

  <!-- Retrieve layouts -->
  <types>
    <members>Account-*</members>
    <members>Contact-*</members>
    <members>Opportunity-*</members>
    <members>Event-*</members>
    <members>*-*</members>
    <name>Layout</name>
  </types>

  <!-- Retrieve validation rules -->
  <types>
    <members>Account.*</members>
    <members>Contact.*</members>
    <members>Opportunity.*</members>
     <members>Event.*</members>
    <members>*</members>
    <name>ValidationRule</name>
  </types>

  <!-- Retrieve list views -->
  <types>
    <members>Account.*</members>
    <members>Contact.*</members>
    <members>Opportunity.*</members>
    <members>Event.*</members>
    <members>*</members>
    <name>ListView</name>
  </types>

  <!-- Retrieve record types -->
  <types>
    <members>Account.*</members>
    <members>Contact.*</members>
    <members>Opportunity.*</members>
     <members>Event.*</members>
    <members>*</members>
    <name>RecordType</name>
  </types>

  <!-- Retrieve workflows (includes rules, alerts, etc.) -->
  <types>
    <members>Account</members>
    <members>Contact</members>
    <members>Opportunity</members>
      <members>Event</members>
    <members>*</members>
    <name>Workflow</name>
  </types>

  <!-- Set the API version to match your Salesforce Org -->
  <version>58.0</version>
</Package>